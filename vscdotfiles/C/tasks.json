{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-lm",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-llapacke",
                "-llapack",
                "-lblas"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/gcc"
        },
        {
            "type": "cppbuild",
            "label": "C++: g++ 生成活动文件",
            "command": "/gcc13.3.0/bin/g++",
            "args": [
                "-std=c++23",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-I/usr/local/eigen/include/eigen3/Eigen/**",
                "-I/home/diketene/mdspan/include/**",
                "-I/boost/boost_1_86_0/**",
                "-I/usr/local/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器：/gcc13.3.0/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "C++: g++ 生成活动文件(Released)",
            "command": "/gcc13.3.0/bin/g++",
            "args": [
                "-std=c++23",
                "-fdiagnostics-color=always",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-I/usr/local/eigen/include/eigen3/Eigen/**",
                "-I/home/diketene/mdspan/include/**",
                "-I/boost/boost_1_86_0/**",
                "-I/usr/local/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器：/gcc13.3.0/bin/g++"  
        },
        {
            "type":"cppbuild",
            "label": "C++: Clang++ 生成活动文件",
            "command": "/usr/local/clang/bin/clang++",
            "args": [
                "-std=c++23",
                "-stdlib=libc++",
                "-fcolor-diagnostics",
                "-fmodule-file=std=/usr/local/clang/share/libc++/v1/std.pcm",
                "-g",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "/usr/local/clang/share/libc++/v1/std.pcm",
                "${file}",
                "-I/usr/local/clang/include/**",
                "-I/usr/local/eigen/include/eigen3/Eigen/**",
                "-I/home/diketene/mdspan/include/**",
                "-I/boost/boost_1_86_0/**",
                "-I/usr/local/include",
                "-L/usr/local/clang/lib/x86_64-unknown-linux-gnu/**"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器：/usr/local/clang/bin/clang++"
        },
        {
            "type": "cppbuild",
            "label": "C++: Clang++生成活动文件(Released)",
            "command": "/usr/local/clang/bin/clang++",
            "args":[
                "-std=c++23",
                "-stdlib=libc++",
                "-fcolor-diagnostics",
                "-fmodule-file=std=/usr/local/clang/share/libc++/v1/std.pcm",
                "-O2",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "/usr/local/clang/share/libc++/v1/std.pcm",
                "${file}",
                "-I/usr/local/clang/include/**",
                "-I/usr/local/eigen/include/eigen3/Eigen/**",
                "-I/home/diketene/mdspan/include/**",
                "-I/boost/boost_1_86_0/**",
                "-I/usr/local/include",
                "-L/usr/local/clang/lib/x86_64-unknown-linux-gnu/**"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器：/usr/local/clang/bin/clang++"
        }
    ]
}