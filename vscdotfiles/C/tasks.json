{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C: gcc 生成活动文件",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-lm",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-llapacke",
                "-llapack",
                "-lblas"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/gcc"
        },
        {
            "type": "cppbuild",
            "label": "C++: g++ 生成活动文件",
            "command": "/gcc13.3.0/bin/g++",
            "args": [
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                "-I/usr/include/eigen3/Eigen/**"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器：/gcc13.3.0/bin/g++"
        }
    ]
}